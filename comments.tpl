<div class="comm">
	<div class="comm1">
		<div class="comm2">
			<div class="comm-avatar"><img src="{foto}" alt=""></div>
			<div class="comm-info">Написал: <b>{author}</b> <span>({date})</span></div>
			<ul class="reset comm-links">
				<li>[fast]Цитировать[/fast]</li>
				<li>[com-edit]Редактировать[/com-edit]</li>
				<li>[com-del]Удалить[/com-del]</li>
			</ul>
			<div class="comm-text">
				[aviable=lastcomments|search]<h4>{news_title}</h4>[/aviable]
				<div>{comment}</div>
				[signature]<div class="signature">--------------------<br />{signature}</div>[/signature]
			</div>
		</div>
	</div>
</div>